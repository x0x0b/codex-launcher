<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>com.github.x0x0b.codex-launcher</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
  <name>Codex Launcher</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor url="https://x0x0b.github.io/">x0x0b</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
  <description><![CDATA[
        <blockquote><b>IMPORTANT</b>: This plugin requires <a href="https://github.com/openai/codex/blob/main/README.md">OpenAI Codex CLI</a> to be installed separately.</blockquote>

        <h2>Overview</h2>
        <p>
          An <b>unofficial</b> IntelliJ IDEA plugin that seamlessly integrates OpenAI Codex CLI into your development workflow by launching it directly from the IDE.
        </p>

        <h2>Key Features</h2>
        <ul>
          <li><b>One-click launch</b>: Toolbar button and Tools menu action for instant access</li>
          <li><b>Integrated Terminal</b>: Opens a dedicated "Codex" terminal tab in your IDE</li>
          <li><b>Project-aware</b>: Automatically runs <code>codex</code> in the current project root directory</li>
          <li><b>Configurable</b>: Customizable launch modes, model selection, and auto file opening</li>
        </ul>

        <h2>Configuration</h2>
        <p>
          Access plugin settings via <em>Preferences | Other Settings | Codex Launcher</em> to configure:
        </p>
        <ul>
          <li>Launch modes (default or --full-auto)</li>
          <li>Model selection (default, preset, or custom models)</li>
          <li>Auto file opening for files modified by Codex</li>
        </ul>

        <h2>Requirements</h2>
        <ul>
          <li>IntelliJ IDEA 2024.2 or later (or other compatible JetBrains IDEs)</li>
          <li>OpenAI Codex CLI installed and available in your system PATH</li>
        </ul>
    ]]></description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.plugins.terminal</depends>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">
    <notificationGroup id="CodexLauncher" displayType="BALLOON" isLogByDefault="true"/>
    <applicationConfigurable instance="com.github.x0x0b.codexlauncher.settings.CodexLauncherConfigurable" id="com.github.x0x0b.codexlauncher.settings" displayName="Codex Launcher"/>
    <postStartupActivity implementation="com.github.x0x0b.codexlauncher.CodexStartupActivity"/>
  </extensions>

  <actions>
    <action id="com.github.x0x0b.codexlauncher.launch"
      class="com.github.x0x0b.codexlauncher.LaunchCodexAction"
      text="Launch Codex" description="Open a Codex terminal" icon="icons/codex.svg">
      <!-- New UI toolbar (2022.3+) -->
      <add-to-group group-id="MainToolbarRight" anchor="last"/>
      <add-to-group group-id="MainToolbarLeft" anchor="last"/>
      <!-- Fallback: old UI/NavBar toolbar -->
      <add-to-group group-id="NavBarToolBar" anchor="last"/>
      <!-- Also put it in the Tools menu for discoverability -->
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>
