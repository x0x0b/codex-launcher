<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>com.github.x0x0b.codex-launcher</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
  <name>Codex Launcher</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor url="https://x0x0b.github.io/">x0x0b</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
  <description><![CDATA[
        <blockquote><b>IMPORTANT</b>: This plugin requires <a href="https://github.com/openai/codex/blob/main/README.md">OpenAI Codex CLI</a> to be installed separately.</blockquote>

        <h2>Overview</h2>
        <p>
          Codex Launcher is an <b>unofficial</b> lightweight utility that opens an integrated Terminal tab and runs <code>codex</code> from your current project root.
          Start Codex in the right working directory without leaving the IDE.
        </p>

        <h2>Key Features</h2>
        <ul>
          <li>Adds a "Launch Codex" action to the main toolbar and the <em>Tools</em> menu</li>
          <li>Creates a new integrated Terminal tab named "Codex" and executes <code>codex</code> in the project root</li>
        </ul>

        <h2>How It Works</h2>
        <ol>
          <li>Click the "Launch Codex" button in the main toolbar</li>
          <li>Or choose <em>Tools | Launch Codex</em></li>
          <li>The integrated Terminal opens and <code>codex</code> runs automatically</li>
        </ol>

        <h2>Requirements</h2>
        <ul>
          <li><code>codex</code> available on the PATH visible to the IDE</li>
        </ul>
    ]]></description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.plugins.terminal</depends>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">
    <notificationGroup id="CodexLauncher" displayType="BALLOON" isLogByDefault="true"/>
    <applicationConfigurable instance="com.github.x0x0b.codexlauncher.settings.CodexLauncherConfigurable" id="com.github.x0x0b.codexlauncher.settings" displayName="Codex Launcher"/>
    <postStartupActivity implementation="com.github.x0x0b.codexlauncher.FileChangeStartupActivity"/>
  </extensions>

  <actions>
    <action id="com.github.x0x0b.codexlauncher.launch"
      class="com.github.x0x0b.codexlauncher.LaunchCodexAction"
      text="Launch Codex" description="Open a Codex terminal" icon="icons/codex.svg">
      <!-- New UI toolbar (2022.3+) -->
      <add-to-group group-id="MainToolbarRight" anchor="last"/>
      <add-to-group group-id="MainToolbarLeft" anchor="last"/>
      <!-- Fallback: old UI/NavBar toolbar -->
      <add-to-group group-id="NavBarToolBar" anchor="last"/>
      <!-- Also put it in the Tools menu for discoverability -->
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>
